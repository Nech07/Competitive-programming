#include <iostream>
#include <bits/stdc++.h>
#include <string.h>
#include <string>
#include <set>
#include <ctype.h>
#include <algorithm>
#include <vector>
#include <map>
#include <math.h>
#define ll long long
using namespace std;


//since the result was too great and couldn't stay in the container i had to do the module at every step, as it wouldn't influence the final result
int main(){
	cin.tie(0);
	ios::sync_with_stdio(0);

	ll n,m= pow(10,9)+7,i,s=2; cin >> n;
	for(i=2;i<=n;i++){
		s=(s*2)%m;
	}

	cout << s;





	


}
