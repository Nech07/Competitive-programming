using namespace std;
// second condition so tha the aren't to great and far apart from each other
int main(){
	cin.tie(0);
	ios::sync_with_stdio(0);

	ll t,a,b; cin >>t;
	while(t--){
		cin >> a>>b;
		cout <<((a+b)%3==0 && 2*a>=b && 2*b >=a? "YES": "NO")<< endl;
	}
}
