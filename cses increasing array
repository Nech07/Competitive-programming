#include <iostream>
#include <bits/stdc++.h>
#include <string.h>
#include <string>
#include <set>
#include <ctype.h>
#include <algorithm>
#include <vector>
#include <map>
#include <math.h>
using namespace std;

int main(){
	cin.tie(0);
	ios::sync_with_stdio(0);
	long long n,i; cin >>n;
	long long arr[n],c=0;
	for(i=0;i<n;i++){
		cin >>arr[i];
	}
	for(i=1;i<n;i++){
		if(arr[i]<arr[i-1]){
			c+=arr[i-1]-arr[i];
			arr[i]=arr[i-1];
		}
	}
	cout << c;

}
