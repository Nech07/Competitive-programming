#include <iostream>
#include <bits/stdc++.h>
#include <string.h>
#include <string>
#include <set>
#include <ctype.h>
#include <algorithm>
#include <vector>
#include <map>
#include <math.h>
using namespace std;

int main(){
	cin.tie(0);
	ios::sync_with_stdio(0);
	long long n; cin >>n;
	cout << n<< " ";
	while(n!=1){
		if(n%2==0){
			n/=2;
		}
		else{
			n=n*3+1;
		}
		cout  << n << " ";
	}
}
	
