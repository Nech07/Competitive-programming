#include <iostream>
#include <bits/stdc++.h>
#include <string.h>
#include <string>
#include <set>
#include <ctype.h>
#include <algorithm>
#include <vector>
#include <map>
#include <math.h>
using namespace std;

int main(){
	cin.tie(0);
	ios::sync_with_stdio(0);
	string s;cin >>s;
	long long i,count=1,m=0;char c1,c2;
	c1 = s[0];
	for(i=1;i<s.size();i++){
		c2=s[i];
		if(c2==c1){
			count++;
		}
		else{
			if(count>m){
				m=count;
			}
			count=1;
		}
		c1=c2;
	}
	cout << max(count,m);
}
	
