#include <iostream>
#include <bits/stdc++.h>
#include <string.h>
#include <string>
#include <set>
#include <ctype.h>
#include <algorithm>
#include <vector>
#include <map>
using namespace std;


int main(){
	int t; cin >> t;
	while(t--){
		int a; cin>>a;int power=1;
    vector<int> c;
		while( a>0){
			if (a%10 >0){
			c.push_back((a%10)*power);
			}
			power*=10;a/=10;
		}
		cout << c.size()<< endl;
		for(int number : c) cout << number << " ";
		cout << endl;
	}
}

